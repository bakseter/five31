{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "commitMessagePrefix": "⬆️",
  "prHourlyLimit": 0,
  "minimumReleaseAge": "3 days",
  "prCreation": "not-pending",
  "ignoreDeps": [
    "eclipse-temurin",
    "postgres",
    "node"
  ],
  "updateInternalDeps": true,
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/@types/*/",
        "/eslint-plugin-*/",
        "/eslint-config-*/",
        "/prettier/",
        "/@typescript-eslint/*/",
        "/@babel/core/",
        "/@testing-library/react/",
        "/@vitejs/plugin-react/",
        "/cypress/",
        "/jsdom/",
        "/vite-tsconfig-paths/",
        "/vitest/",
        "/webpack/"
      ]
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/@vercel/analytics/"
      ]
    },
    {
      "groupName": "Kotlin packages",
      "matchPackageNames": [
        "/^org.jetbrains.kotlin.*/"
      ]
    }
  ]
}
